MODEL lsh
MODULE main

VAR
    x : uint32_t;
    y : uint32_t;
    c : uint32_t;

INIT
     (c = 1) & (x = 1) & (y = 1);

TRANS
     next(x) = ((c = 1) ? ( x << y )
                        : ( x >> y ));

     next(y) = y;

     next(c) = ((x = 0x100000000) ? 2
                           : (x = 1) ? 1
                                     : c);
