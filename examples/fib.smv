#word-width 64
MODULE main

VAR f : uint;
    g : uint;
    i : uint;

INIT
    f = 0;

INIT
    g = 1;

INIT
    i = 0;

TRANS
  next(f) = g;

TRANS
  next(g) = f + g;

TRANS
  next(i) = i + 1;

@hidden
DEFINE GOAL := i >= 50;

-- to generate the sequence of the first 50 fibonacci numbers issue the command:
-- >> check-invar ! GOAL;
