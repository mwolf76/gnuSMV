-- To generate the sequence of the first n fibonacci numbers issue the
-- command: >> set n 10; reach END; dump-trace

#word-width 64
MODULE fibonacci

VAR f : uint;
    g : uint;

@hidden
VAR i : uint;

@input
VAR n : uint;

INIT
    f = 0;

INIT
    g = 1;

INIT
    i = 0;

TRANS
  f := g;

TRANS
  g := f + g;

TRANS
  i := i + 1;

@hidden
DEFINE END := i >= n;
