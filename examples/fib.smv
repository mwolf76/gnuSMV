-- To generate the sequence of the first n fibonacci numbers issue the
-- command: >> set n 10; reach LIMIT;

#word-width 64
MODULE main

VAR f : uint;
    g : uint;

@hidden
VAR i : uint;

@input
VAR n : uint;

INIT
    f = 0;

INIT
    g = 1;

INIT
    i = 0;

TRANS
  next(f) = g;

TRANS
  next(g) = f + g;

TRANS
  next(i) = i + 1;

@hidden
DEFINE END := i >= n;
